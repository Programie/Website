{% extends "page.twig" %}

{% block content %}
    {% set project = projects.byName(name) %}

    <div class="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="carousel-image" style="background-image: url({{ project.coverImage }})"></div>
                <div class="carousel-caption text-left">
                    <h2>{{ project.title }}</h2>
                    <p>{{ project.description }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {{ project.content|raw }}

        {% if project.downloads %}
            <ul>
                {% for download in project.downloads %}
                    <li><a href="{{ download.url }}" target="_blank">{{ download.title }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}

        <a href="https://gitlab.com/Programie/{{ project.repoName }}"><i class="fab fa-gitlab"></i> View on GitLab</a>
    </div>
{% endblock %}